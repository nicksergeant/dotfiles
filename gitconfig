[user]
    name = Nick Sergeant
    email = nick@nicksergeant.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
[alias]
    gl  = log -16 --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    gll = log     --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    pull = pull --ff-only
    merge = merge --no-ff
    up = merge --ff-only
    root = rev-parse --show-toplevel
    currentbranch = !git branch --contains HEAD | grep '*' | tr -s ' ' | cut -d ' ' -f2
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[push]
    default = current
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[core]
    excludesfile = /Users/Nick/.gitignore
[credential]
    helper = osxkeychain
[web]
	browser = open
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope
