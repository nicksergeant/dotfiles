#!/bin/bash

set -e

/usr/local/bin/ctags -R . && sed -i .bak -E -e '/^[^]+[^]+.py.+v$/d' tags

mv tags tags1

ffind '.js' --literal |  xargs jsctags -f tags2


echo '!_TAG_FILE_FORMAT2/extended format; --format=1 will not       append ;" to lines/' > tags
echo '!_TAG_FILE_SORTED1/0=unsorted, 1=sorted, 2=foldcase/' >> tags

cat tags1 tags2 | grep -Ev '^!' | grep -v 'anonymous_function' | sort >> tags

rm tags1 tags2
