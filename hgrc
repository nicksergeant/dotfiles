addremove = --similarity 100

[alias]
nudge = push --rev .
tmd = diff --no-color -U 10
st = status -C
? = summary

cm = commit -m

slog = log --style=$HOME/sources/mercurial-cli-templates/map-cmdline.slog
. = slog -l15
.. = . -l100000000

sglog = glog --style=$HOME/sources/mercurial-cli-templates/map-cmdline.sglog
, = sglog -l10
,, = , -l100000000

nlog = log --style=$HOME/sources/mercurial-cli-templates/map-cmdline.nlog
n = nlog -vr
show = nlog --color=always -vpr

